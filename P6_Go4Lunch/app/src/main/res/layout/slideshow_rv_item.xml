<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/slideshow_rv_item_linearlayout"
        android:layout_width="395dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01">

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/places_autocomplete_error_message"
        app:layout_constraintTop_toBottomOf="@+id/slideshow_rv_item_linearlayout" />

    <TextView
        android:id="@+id/slideshow_rv_item_adress"
        android:layout_width="251dp"
        android:layout_height="70dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/slideshow_rv_item_linearlayout"
        app:layout_constraintTop_toTopOf="@+id/slideshow_rv_item_linearlayout" />

    <TextView
        android:id="@+id/slideshow_rv_item_phone"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/slideshow_rv_item_linearlayout"
        app:layout_constraintStart_toEndOf="@+id/slideshow_rv_item_adress"
        app:layout_constraintTop_toTopOf="@+id/slideshow_rv_item_linearlayout" />

</androidx.constraintlayout.widget.ConstraintLayout>